#include <iostream>

using namespace std;
int main()
{
    float a, b, c, d, p;
    
    cout<<"Ingrese la primera calificacion: ";
    cin>>a;
    if ( a>10 || a<0 ) {
        cout<<"Los valores son invalidos"; 
        
     }
    else {
    cout<<"Ingrese la segunda calificacion: ";
    cin>>b;
     if ( b>10 || b<0 ) {
       cout<<"Los valores son invalidos";
     }
     else {
       cout<<"Ingrese la tercera calificacion: ";
        cin>>c;
        if ( c>10 || c<0 ) {
        cout<<"Los valores son invalidos";
    }
        else {
         cout<<"Ingrese la cuarta calificacion: ";
         cin>>d;
         if ( d>10 || d<0 ) {
         cout<<"Los valores son invalidos";
    }
      else {
    p=(a+b+c+d)/4;
    cout<<"Tu promedio es de: "<<p<<"\n";
    
        if ( p>=6 || p<=10 ) {
        cout<<"Aprobado";
    }
    else {         
        if ( p>=5 || p<=5.9 ) {
        cout<<"Derecho a extraordinario"; }
        else {
         if ( p>=2 || p<=4.9 ) {
        cout<<"Derecho a titulo"; }
        else 
        cout<<"Sin derecho a nada";
        }
    

    return 0;
} 
}
}
