//Suma de los números enteros impares comprendidos entre 1 y N.
//S=1+3+5+⋯…………+N 

#include <iostream>

using namespace std;

int main() {
    
    int a = 0, n, i = 1;
    cout<<"Ingrese el numero hasta el cual se va a sumar los numeros impares ";
    cin>>n;
    
    //Ingreso mi palabra reservada while
    
    while (i<=n) {
        a = a + i;
        i = i + 2;
    }
    
    cout<<"La sumatoria de los numeros impares sera igual a "<<a;
    
    
    
    return 0;
}
