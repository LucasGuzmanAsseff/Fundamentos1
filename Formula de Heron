#include <iostream>
#include <math.h>
using namespace std;

int main() {
    float p, s, area, a, b, c;

    cout << "Ingresa el valor de a: ";
    cin >> a;
    cout << "Ingresa el valor de b: ";
    cin >> b;
    cout << "Ingresa el valor de c: ";
    cin >> c;
    s = (a+c+b)/2;
    p = s*(s-a)*(s-b)*(s-c);
    area = sqrt(p);
    cout << "El area es: " << area << endl;

    return 0;
}
